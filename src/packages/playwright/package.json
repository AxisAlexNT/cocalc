{
  "name": "@cocalc/playwright",
  "version": "1.0.0",
  "description": "",
  "exports": {
    "./*": "./*.ts"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "DEBUG=* pnpm exec start-test-server",
    "stop": "DEBUG=* pnpm exec stop-test-server",
    "start-foreground": "DEBUG=* pnpm exec stop-test-server; FOREGROUND=yes DEBUG=* pnpm exec start-test-server | true; DEBUG=* pnpm exec stop-test-server",
    "test": "pnpm exec playwright test --project chromium",
    "build": "pnpm exec tsc",
    "debug": "pnpm exec playwright test --debug --project chromium",
    "test-headed": "pnpm exec playwright test --project chromium --headed",
    "report": "pnpm exec playwright show-report",
    "codegen": "pnpm exec playwright codegen `cat .url`",
    "test-all": "pnpm exec playwright test",
    "chromium": "pnpm exec playwright test --project chromium",
    "firefox": "pnpm exec playwright test --project firefox",
    "safari": "pnpm exec playwright test --project safari",
    "iphone": "pnpm exec playwright test --project iphone",
    "tsc": "pnpm exec tsc -w"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cocalc/playwright": "workspace:*",
    "@playwright/test": "^1.29.2",
    "@types/node": "^18.11.18",
    "await-spawn": "^4.0.2",
    "awaiting": "^3.0.0",
    "debug": "^4.3.2",
    "node-fetch": "^2.6.7"
  },
  "bin": {
    "stop-test-server": "./dist/run/stop-test-server.js",
    "start-test-server": "./dist/run/start-test-server.js"
  }
}
